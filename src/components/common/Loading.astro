---
import { Icon } from "astro-icon/components";

interface Props {
  fullSize?: boolean;
  size?: number | string;
}

const { fullSize, size } = Astro.props;
---

<div class:list={["loading", fullSize]}>
  <Icon name='line-md:loading-twotone-loop' size={size} />
</div>

<style>
  .loading {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .fullSize {
    width: 100%;
    height: 100%;
  }
</style>
