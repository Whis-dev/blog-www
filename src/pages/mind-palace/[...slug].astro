---
import { getEntry, render } from "astro:content";

import Post from "@/layouts/Post.astro";

const { slug } = Astro.params;
const mindPalace = await getEntry("mindPalace", slug as string);

if (!mindPalace) return Astro.redirect("/404");

const { Content } = await render(mindPalace);
---

<Post>
  <Content />
</Post>
